FROM node:8-alpine

MAINTAINER GALYMZHAN ALMABEK

WORKDIR /api

COPY . /api/

ARG UI_URL=http://134.209.240.215:8000
ARG MAINFLUX_URL=134.209.240.215
ARG BOOTSTRAP_URL=134.209.240.215:8200
ARG DATABASE_URL=mongodb://mainflux_db:27017/mainflux_admin

ENV UI_URL $UI_URL
ENV MAINFLUX_URL $MAINFLUX_URL
ENV BOOTSTRAP_URL $BOOTSTRAP_URL
ENV DATABASE_URL $DATABASE_URL
ENV PORT 5000

RUN npm install

EXPOSE 5000

## WAIT UNTIL MONGODB IS RUNNING
ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.2.1/wait /wait
RUN chmod +x /wait

CMD /wait && npm start